<div class="container">
  <h2>ヒアリングシート</h2>
  <p>※その他以外の全てにチェックをいれてください。</p>
  <br></br>
    <%= form_for @page do |f| %>

      <div class="form-group">
        <div class="haba">
          <%= f.label :企業名 %>
        </div>
          <%= f.text_area :companyname,class:"text-a"%>
      </div>

      <div class="form-group">
        <div class="haba">
          <%= f.label :施策のご希望, class: "text-white" %>
        </div>
          <%= f.check_box :tool, {multiple: true}, "研修", nil %>
          <%= f.label :研修 %>
          <%= f.check_box :tool, {multiple: true}, "スクーリング", nil %>
          <%= f.label :スクーリング %>
          <%= f.check_box :tool, {multiple: true}, "通信", nil %>
          <%= f.label :通信 %>
          <%= f.check_box :tool, {multiple: true}, "教材提供", nil %>
          <%= f.label :教材提供 %>
      </div>

      <div class="form-group">
        <div class="haba">
          <%= f.label :対象者, class: "text-white" %>
        </div>
          <%= f.check_box :property, {multiple: true}, "内定者", nil %>
          <%= f.label :内定者 %>
          <%= f.check_box :property, {multiple: true}, "新入社員", nil %>
          <%= f.label :新入社員 %>
          <%= f.check_box :property, {multiple: true}, "社員", nil %>
          <%= f.label :社員 %>
          <%= f.check_box :property, {multiple: true}, "その他", nil %>
          <%= f.label :その他 %>
      </div>

      <div class="form-group">
        <div class="haba">
          <%= f.label :対象人数, class: "text-white" %>
        </div>
          <%= f.number_field :people, class: "text-b" %>名
      </div>

      <div class="form-group">
        <div class="haba">
          <%= f.label :合格目標, class: "text-white" %>
        </div>
          <%= f.number_field :goal, class: "text-b" %>%
      </div>

      <div class="form-group">
        <div class="haba">
          <%= f.label :予算, class: "text-white" %>
        </div>
          <%= f.number_field :budget, class: "text-b" %>万円
      </div>


      <div class="form-group">
        <div class="haba">
          <%= f.label :開始月, class: "text-white" %>
        </div>
          <%= f.number_field :start, class: "text-b" %>月
        </div>

      <div class="form-group">
        <div class="haba">
          <%= f.label :実施曜日, class: "text-white" %>
        </div>
        <%= f.check_box :weekday, {multiple: true}, "月", nil %>
        <%= f.label :月 %>
        <%= f.check_box :weekday, {multiple: true}, "火", nil %>
        <%= f.label :火 %>
        <%= f.check_box :weekday, {multiple: true}, "水", nil %>
        <%= f.label :水 %>
        <%= f.check_box :weekday, {multiple: true}, "木", nil %>
        <%= f.label :木 %>
        <%= f.check_box :weekday, {multiple: true}, "金", nil %>
        <%= f.label :金 %>
        <%= f.check_box :weekday, {multiple: true}, "土", nil %>
        <%= f.label :土 %>
        <%= f.check_box :weekday, {multiple: true}, "日", nil %>
        <%= f.label :日 %>
      </div>


      <div class="form-group">
        <div class="haba">
          <%= f.label :受験有無, class: "text-white" %>
        </div>
          <%= f.radio_button :examination, :true %>
          <%= f.label :有 %>
          <%= f.radio_button :examination, :false %>
          <%= f.label :無 %>
      </div>

      <div class="form-group">
        <div class="haba">
          <%= f.label :取得支援, class: "text-white" %>
        </div>
        <%= f.check_box :aid, {multiple: true}, "なし", nil %>
        <%= f.label :なし %>
        <%= f.check_box :aid, {multiple: true}, "研修（社内・外）", nil %>
        <%= f.label :研修（社内・外） %>
        <%= f.check_box :aid, {multiple: true}, "報奨金", nil %>
        <%= f.label :報奨金 %>
        <%= f.check_box :aid, {multiple: true}, "取得補助", nil %>
        <%= f.label :取得補助 %>
      </div>

      <div class="form-group">
        <div class="haba">
          <%= f.label :昨年合格率, class: "text-white" %>
        </div>
          <%= f.number_field :lastpassrate, class: "text-b" %>%
      </div>

      <div class="form-group">
        <div class="haba">
          <br><%= f.label :その他, class: "text-white" %></br>
        </div>
          <%= f.text_area :others, class: "text-c"  %>
      </div>

      <%= f.submit "送信", class: "btn-white" %>
    <% end %>

  <div class="takasa">
    <%= button_to '一覧',pages_index_path,method: :get %>
  </div>
